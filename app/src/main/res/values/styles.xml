<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Buttons" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="right_buttons" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViews" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/edittext_margin_bottom</item>
        <item name="android:textSize"> @dimen/edittext_text_size</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Buttons_small" parent="Buttons">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Buttons_small_right" parent="right_buttons">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


</resources>